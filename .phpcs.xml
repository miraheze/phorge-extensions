<?xml version="1.0"?>
<ruleset>
	<file>.</file>
	<rule ref="./vendor/mediawiki/mediawiki-codesniffer/MediaWiki">
		<exclude name="Generic.Files.LineLength.TooLong" />
		<exclude name="MediaWiki.Commenting" />
		<exclude name="MediaWiki.WhiteSpace.SpaceBeforeSingleLineComment.NewLineComment" />
		<exclude name="MediaWiki.NamingConventions.PrefixedGlobalFunctions.allowedPrefix" />
		<exclude name="MediaWiki.NamingConventions.ValidGlobalName.allowedPrefix" />
		<exclude name="MediaWiki.Usage.SuperGlobalsUsage.SuperGlobals" />
	</rule>
	<arg name="bootstrap" value="./vendor/mediawiki/mediawiki-codesniffer/utils/bootstrap-ci.php" />
	<arg name="extensions" value="php" />
	<arg name="encoding" value="UTF-8" />
	<exclude-pattern type="relative">scripts/init/init-script.php</exclude-pattern>
</ruleset>
